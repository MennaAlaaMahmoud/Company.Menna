<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Company.Menna.PL</title>

    <!-- Bootstrap & Font Awesome -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">

    <!-- Site Styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Company.Menna.PL.styles.css" asp-append-version="true" />

    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        /* Navbar Color */
        .navbar {
            background-color: #f4d1d7; /* لون وردي هادي */
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* إضافة ظل للـ navbar */
        }

        .navbar-nav .nav-link {
            color: #5a5a5a !important; /* لون النص داخل navbar باللون الرمادي الداكن */
            margin-right: 15px;
        }

            .navbar-nav .nav-link:hover {
                color: #e06f75 !important; /* لون الوردي عند التمرير */
            }

        .navbar-brand {
            font-weight: bold;
            font-size: 1.25rem;
            color: #5a5a5a !important; /* لون النص بالرمادي الداكن */
        }

        /* تحسين زر الـ SignOut */
        .nav-link.btn-danger {
            background-color: #f99e9e !important; /* وردي ناعم */
            border: none;
            color: #fff;
        }

            .nav-link.btn-danger:hover {
                background-color: #f77d7d !important; /* أفتح عند التمرير */
            }

    </style>
</head>
<body>
    <!-- Header -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-building"></i> Company
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i> Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Department" asp-action="Index"><i class="fas fa-sitemap"></i> Department</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Employee" asp-action="Index"><i class="fas fa-users"></i> Employee</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Index"><i class="fas fa-user"></i> Users</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Role" asp-action="Index"><i class="fas fa-user-shield"></i> Roles</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light btn btn-danger" asp-area="" asp-controller="Account" asp-action="SignOut"><i class="fas fa-sign-out-alt"></i> Sign Out</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Body -->
    <div class="container my-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="footer text-muted mt-auto border-top" style="text-align: center; ">
        <div class="container">
            &copy; 2025 - Company.Menna.PL -
            <a asp-area="" asp-controller="Home" asp-action="Privacy" style="color: #f8a9c2;">Privacy</a>
        </div>
    </footer>


    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("ValidationSection", required: false)
</body>
</html>
