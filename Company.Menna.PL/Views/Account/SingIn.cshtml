@model SingInDto
@{
	ViewData["Title"] = "SingIn";
	Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
	<div class="agileits-top">
		<div asp-validation-summary="All"></div>
		<form asp-action="SingIn">
			<input class="text email" asp-for="Email" placeholder="Email" required="">
			<input class="text" asp-for="Password" placeholder="Password" required="">
			<div class="wthree-text m-3">
				<label class="anim">
					<input asp-for="RememberMe" class="checkbox">
					<span>Remember Me</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNIN">
		</form>

		@* Sing In with Google and Facebook *@
		<br />
		<div class="social-buttons-container" style="display: flex; justify-content: space-between; gap: 10px;">
			<a asp-action="GoogleLogin" class="social-login-btn" style="flex: 1; display: block; text-align: center; background-color:#db4437; color:white; padding:10px; border-radius:5px;">
				<i class="fab fa-google" style="margin-right:10px;"></i> Sing In With Google
			</a>
			<a asp-action="FacebookLogin" class="social-login-btn" style="flex: 1; display: block; text-align: center; background-color:#3b5998; color:white; padding:10px; border-radius:5px;">
				<i class="fab fa-facebook-f" style="margin-right:10px;"></i> Sing In With Facebook
			</a>
		</div>
		<br />

		<p>Don't have an Account? <a asp-action="SingUp"> Create New Account ? </a></p>
		<br />
		<br />

		<p><a asp-action="ForgetPassword"> Forget Password </a></p>
	</div>
</div>

@section ValidationSection {
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
