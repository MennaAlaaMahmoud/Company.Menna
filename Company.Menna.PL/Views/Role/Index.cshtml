@model IEnumerable<RoleToReturnDto>
@{
    ViewData["Title"] = "Index";
   // Layout = "~/Views/Home/Index.cshtml";
}

<br />
<h1>All Roles</h1>

<br />

<form>
    <div class="container">
        <div class="row">
            <div class="col-6">
                <input id="SearchInput" placeholder="Search By Name" name="SearchInput" class="form-control" />
            </div>
            <div class="col-6">
                <input type="submit" value="Search" class=" btn btn-primary"
            </div>
        </div>
    </div>
</form>

<a asp-action="Create" class="mb-3 mt-4 btn btn-primary">Create Role</a>


<br />

@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning">Details</a>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Update</a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <div class="mt-4 alert alert-success text-center">
        <h4>There Are No Roles</h4>
    </div>
}

</div>
</div>
</div>
